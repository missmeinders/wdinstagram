<!DOCTYPE html>

<html lang="en">
<head>
  <% include ../partials/head.ejs %>
</head>

<body>
  <% include ../partials/nav.ejs %>

  <div class="feed box">
    <% entries.forEach(function(entry){ %>
      <div class="entry">
        <span class="author-text"><%= entry.author %></span>
        <span class="date-text"><%= entry.date_taken %></span>
        <hr class="before"/>
        <a href="/entries/<%= entry.id %>">
          <img alt="Entry Image" src="<%= entry.photo_url %>"/>
        </a>
        <hr class="after"/>
        <span class="likes-text">
          <a href="/entries/<%= entry.id %>/like?redirect=index">
            <i class="fa fa-heart"></i>
            <%= entry.likes %> likes
          </a>
        </span>
      </div>
    <% }) %>
  </div>
</body>
</html>
